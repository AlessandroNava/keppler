.file-tree
    position absolute
    top 120px
    bottom 0px
    left 0
    overflow-y scroll
    background #26283B
    color #ffffff
    user-select none

.search
    display block
    font-size 14px
    padding-left 20px
    width 100%
    height 40px
    margin-bottom 10px
    line-height 40px
    border-bottom 1px solid rgba(255, 255, 255, 0.2)

.content
    padding-bottom 60px
    line-height 28px
    font-size 14px

.all-read
    position fixed
    bottom 20px
    left 20px
    height 20px
    padding-left 4px
    padding-right 4px
    line-height 20px
    background #393855
    font-size 12px
    text-transform uppercase

    &:hover
        color #4BD1C5